<% provide(:title, 'Birst Extract Group Collection') %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @birst_extract_group_collection.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @birst_extract_group_collection.description %>
</p>

<div class="row">
  <div class="col-md-6">

    <ul class="list-group">
      <% birst_extract_groups = @birst_extract_group_collection.birst_extract_groups %>
      <% BirstExtractGroup.order(:name).each do |pg| %>
        <% selected = birst_extract_groups.collect { |d| d.id }.include? pg.id %>
        <li class="list-group-item <%= selected ? 'list-group-item-success' : '' %>"> 
          <span class="glyphicon <%= selected ? 'glyphicon-ok' : 'glyphicon-minus' %>"></span>
          <%= conditional_emphasis(selected, tag_false: :small) { link_to pg.name, pg } %> 
        </li>
      <% end %>
    </ul>

  </div>
</div>


<%= link_to 'Edit', edit_birst_extract_group_collection_path(@birst_extract_group_collection) %> |
<%= link_to 'Back', birst_extract_group_collections_path %>
