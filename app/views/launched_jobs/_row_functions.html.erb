<span class="hint">
  <%= link_to job_log_path(launched_job_id), :id => 'log', :target => '_blank', :title => 'Download Log', :data => { :toggle => 'tooltip' } do %>
    <span class="glyphicon glyphicon-download"></span>
  <% end %>
  <%= link_to launched_job_path(launched_job_id), :id => 'show', :title => 'Show', :data => { :toggle => 'tooltip' } do %>
    <span class="glyphicon glyphicon-eye-open"></span>
  <% end %>
  <%= link_to launched_job_rerun_path(launched_job_id), :id => 'run_now', :title => 'Rerun Job Now', :data => { :toggle => 'tooltip' } do %>
    <span class="glyphicon glyphicon-repeat"></span>
  <% end %>

  <% if LaunchedJob.find(launched_job_id).try(:status) == LaunchedJob::RUNNING %>
    <%= link_to launched_job_kill_job_path(launched_job_id), :id => 'kill_job', :title => 'Kill Job', :data => { :toggle => 'tooltip' } do %>
      <span class="glyphicon glyphicon-ban-circle"></span>
    <% end %>
  <% end %>
</span>
