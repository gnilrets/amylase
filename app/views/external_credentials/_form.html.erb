<div class="row">
  <div class="col-md-10">

    <%= simple_form_for(@external_credential) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, as: :string %>
      <%= f.input :description %>
      <%= f.input :username, as: :string %>
      <%= f.input :password, as: :password, input_html: { value: @external_credential.password } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'submit_external_credential' %>
    </div>
    <% end %>

  </div>
</div>
